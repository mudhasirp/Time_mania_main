    <section class="product spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <ul class="filter__controls">
                        <li data-filter=".new-arrivals" class="active">NEW ARRIVALS</li>
                    </ul>
                </div>
            </div>

            <div class="row product__filter">
                <% for(let i=0; i < products.length; i++) { %>
                    <div class="col-lg-3 col-md-4 col-sm-6 col-12">
                        <div class="product-card">
                            <div class="product-img-wrap">
                                <a href="/productDetails?id=<%=products[i]._id%>">
                                    <img class="product-img" src="/uploads/re-image/<%=products[i].productImage[0]%>"
                                        alt="">
                                </a>
                                <a href="/addtoWishlist?id=<%=products[i]._id%>" class="wishlist-btn">
                                    <i class="fas fa-heart"></i>
                                </a>
                            </div>

                            <div class="product-info">
                                <h6 class="product-title">
                                    <%= products[i].productName %>
                                </h6>
                                <h5 class="product-price">₹<%= products[i].salePrice %>
                                </h5>
                                <a href="/addToCart?id=<%=products[i]._id%>" class="add-to-cart-btn">Add to Cart</a>
                            </div>
                        </div>
                    </div>
                    <% } %>
            </div>
        </div>
    </section>

