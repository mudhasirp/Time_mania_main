<%- include("../../views/partials/admin/header") %>
    <div class="container-fluid">
        <h1 class="h4 mb-4 text-gray-800">All Orders</h1>

        <!-- Filters -->
        <div class="card mb-4 shadow-sm">
            <div class="card-body">
                <form method="GET" action="/admin/orders">
                    <div class="row g-3">
                        <div class="col-md-3">
                            <select name="status" class="form-select">
                                <option value="">All Statuses</option>
                                <option value="pending">Pending</option>
                                <option value="processing">Processing</option>
                                <option value="shipped">Shipped</option>
                                <option value="delivered">Delivered</option>
                                <option value="cancelled">Cancelled</option>
                                <option value="return request">Return Request</option>
                                <option value="returned">Returned</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <input type="date" name="startDate" class="form-control">
                        </div>
                        <div class="col-md-3">
                            <input type="date" name="endDate" class="form-control">
                        </div>
                        <div class="col-md-3">
                            <button type="submit" class="btn btn-primary w-100">Filter</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <!-- Orders List -->
        <div class="row">
            <% orders.forEach(order=> { %>
                <div class="col-md-4 mb-4">
                    <div class="card shadow-sm border-light">
                        <div class="card-body">
                            <h5 class="card-title text-primary">Order ID: <%= order.orderId %>
                            </h5>
                            <p class="card-text"><strong>User Name:</strong>
                                <% if (order.userId && order.userId.name) { %>
                                    <%= order.userId.name %>
                                        <% } else { %>
                                            <span class="text-muted">Unknown User</span>
                                            <% } %>
                            </p>
                            <p class="card-text"><strong>Total Items:</strong>
                                <% if (order.orderedItems && order.orderedItems.length) { %>
                                    <%= order.orderedItems.length %>
                                        <% } else { %>
                                            0
                                            <% } %>
                            </p>
                            <p class="card-text"><strong>Final Amount:</strong> â‚¹<%= order.totalPrice ?
                                    order.finalAmount.toFixed(2) : '0.00' %>
                            </p>
                           
                            <p class="card-text"><strong>Payment Method:</strong>
                                <%= order.payment.method%>
                            </p>
                            <p class="card-text">
                                <strong>Status:</strong>
                                <span class="badge 
                                <% 
                                let badgeClass = '';
                                switch(order.status) {
                                    case 'pending': 
                                        badgeClass = 'bg-warning text-dark';
                                        break;
                                    case 'processing':
                                        badgeClass = 'bg-info text-white';
                                        break;
                                    case 'shipped':
                                        badgeClass = 'bg-primary text-white';
                                        break;
                                    case 'delivered':
                                        badgeClass = 'bg-success text-white';
                                        break;
                                    case 'cancelled':
                                        badgeClass = 'bg-danger text-white';
                                        break;
                                    case 'return request':
                                        badgeClass = 'bg-secondary text-white';
                                        break;
                                    case 'returned':
                                        badgeClass = 'bg-dark text-white';
                                        break;
                                    default:
                                        badgeClass = 'bg-light text-dark';
                                }
                                %>
                                <%= badgeClass %>">
                                    <%= order.status %>
                                </span>
                            </p>
                            <p class="card-text"><strong>Order Date:</strong>
                                <% if (order.createdOn) { %>
                                    <%= new Date(order.createdOn).toLocaleDateString() %>
                                        <% } else { %>
                                            <span class="text-muted">N/A</span>
                                            <% } %>
                            </p>
                            <div class="d-flex justify-content-between">
                                <a href="/admin/order/<%= order._id %>" class="btn btn-info btn-sm">
                                    <i class="fas fa-eye"></i> View
                                    </ a>
                                    <div class="btn-group" role="group">
                                        <button class="btn btn-warning btn-sm dropdown-toggle"
                                            data-bs-toggle="dropdown">
                                            <i class="fas fa-cog"></i>
                                        </button>
                                        <div class="dropdown-menu">
                                            <% if (order.status !=='delivered' && order.status !=='cancelled' ) { %>
                                                <a class="dropdown-item" href="#"
                                                    onclick="updateOrderStatus('<%= order._id %>', 'processing')">
                                                    Mark as Processing
                                                </a>
                                                <a class="dropdown-item" href="#"
                                                    onclick="updateOrderStatus('<%= order._id %>', 'shipped')">
                                                    Mark as Shipped
                                                </a>
                                                <a class="dropdown-item" href="#"
                                                    onclick="updateOrderStatus('<%= order._id %>', 'delivered')">
                                                    Mark as Delivered
                                                </a>
                                                <% } %>
                                                    <% if (order.status !=='cancelled' ) { %>
                                                        <a class="dropdown-item text-danger" href="#"
                                                            onclick="updateOrderStatus('<%= order._id %>', 'cancelled')">
                                                            Cancel Order
                                                        </a>
                                                        <% } %>
                                        </div>
                                    </div>
                            </div>
                        </div>
                    </div>
                </div>
                <% }); %>
        </div>

        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                <% if (currentPage> 1) { %>
                    <li class="page-item">
                        <a class="page-link" href="?page=<%= currentPage - 1 %>">Previous</a>
                    </li>
                    <% } %>

                        <% const maxPages=5; let startPage=Math.max(1, currentPage - Math.floor(maxPages / 2)); let
                            endPage=Math.min(totalPages, startPage + maxPages - 1); if (endPage - startPage + 1 <
                            maxPages) { startPage=Math.max(1, endPage - maxPages + 1); } %>

                            <% for(let i=startPage; i <=endPage; i++) { %>
                                <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                                    <a class="page-link" href="?page=<%= i %>">
                                        <%= i %>
                                    </a>
                                </li>
                                <% } %>

                                    <% if (currentPage < totalPages) { %>
                                        <li class="page-item">
                                            <a class="page-link" href="?page=<%= currentPage + 1 %>">Next</a>
                                        </li>
                                        <% } %>
            </ul>
        </nav>
    </div>

    <%- include("../../views/partials/admin/footer") %>