            color: #bbb;
        }

        .feature-box {
            background: rgba(255, 255, 255, 0.1);
            padding: 30px;
            margin: 15px;
            border-radius: 8px;
            transition: 0.3s;
        }

        .feature-box i {
            font-size: 40px;
            color: #ff6b6b;
            margin-bottom: 15px;
        }

        .feature-box h4 {
            font-size: 20px;
            margin-bottom: 10px;
        }

        .feature-box p {
            font-size: 14px;
            color: #ddd;
        }

        .feature-box:hover {
            background: rgba(255, 255, 255, 0.2);
            transform: translateY(-5px);
        }

        .why-watches {
            text-align: center;
            padding: 80px 0;
            background: #f8f9fa;
            color: #333;
            border-radius: 10px;
            margin: 50px auto;
        }

        .section-title {
            font-size: 32px;
            font-weight: bold;
            margin-bottom: 10px;
            color: #222;
        }

        .section-subtitle {
            font-size: 18px;
            margin-bottom: 30px;
            color: #555;
        }

        .feature-box {
            background: white;
            padding: 30px;
            margin: 15px;
            border-radius: 8px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            transition: 0.3s;
        }

        .feature-box i {
            font-size: 40px;
            color: #000000;
            margin-bottom: 15px;
        }

        .feature-box h4 {
            font-size: 20px;
            margin-bottom: 10px;
            color: #222;
        }

        .feature-box p {
            font-size: 14px;
            color: #666;
        }

        .feature-box:hover {
            transform: translateY(-5px);
        }

        .brand-spotlight {
            margin-top: 50px;
            font-size: 18px;
            color: #333;
        }

        .brand-name {
            font-weight: bold;
            color: #000000;
            font-size: 22px;
        }

        /* Section Styling */
        .product {
            padding: 60px 0;
            background: #f9f9f9;
        }

        /* Filter Controls */
        .filter__controls {
            list-style: none;
            padding: 0;
            display: inline-block;
            background: #222;
            color: #fff;
            padding: 10px 20px;
            border-radius: 30px;
            cursor: pointer;
            font-weight: bold;
            transition: 0.3s;
        }

        .filter__controls:hover,
        .filter__controls .active {
            background: #000000;
        }

        /* Product Card */
        .product-card {
            background: white;
            border-radius: 10px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            transition: all 0.3s ease-in-out;
            text-align: center;
            padding-bottom: 15px;
        }

        .product-card:hover {
            transform: translateY(-5px);
            box-shadow: 0px 10px 20px rgba(0, 0, 0, 0.15);
        }

        /* Product Image */
        .product-img-wrap {
            position: relative;
            overflow: hidden;
            border-bottom: 1px solid #ddd;
        }

        .product-img {
            width: 100%;
            transition: transform 0.4s ease-in-out;
        }

        .product-card:hover .product-img {
            transform: scale(1.1);
        }

        /* Wishlist Button */
        .wishlist-btn {
            position: absolute;
            top: 10px;
            right: 10px;
            background: rgba(255, 255, 255, 0.8);
            padding: 8px;
            border-radius: 50%;
            transition: 0.3s;
        }

        .wishlist-btn i {
            color: #ff6b6b;
            font-size: 18px;
        }

        .wishlist-btn:hover {
            background: #ff6b6b;
        }

        .wishlist-btn:hover i {
            color: white;
        }

        /* Product Info */
        .product-info {
            padding: 15px;
        }

        .product-title {
            font-size: 16px;
            font-weight: 600;
            color: #222;
            margin-bottom: 5px;
        }

        .product-price {
            font-size: 18px;
            font-weight: bold;
            color: #000000;
            margin-bottom: 10px;
        }

        /* Add to Cart Button */
        .add-to-cart-btn {
            display: inline-block;
            background: #222;
            color: white;
            padding: 8px 15px;
            border-radius: 5px;
            font-weight: bold;
            transition: 0.3s;
            text-decoration: none;
        }

        .add-to-cart-btn:hover {
            background: #ff6b6b;
        }

        .filter__controls {
            list-style: none;
            padding: 0;
            display: inline-block;
            background: #000;
            /* Pure Black Background */
            color: #fff;
            padding: 12px 25px;
            border-radius: 30px;
            font-weight: bold;
            text-transform: uppercase;
            letter-spacing: 1px;
            font-size: 16px;
            cursor: pointer;
            transition: 0.3s;
            border: 2px solid #000000;
            box-shadow: 0px 4px 10px rgba(255, 255, 255, 0.2);
        }

        .filter__controls .active {
            background: #ffffff;
            /* Stylish Red Accent */
            color: #000;
            border-color: #000;
        }

        .filter__controls:hover {
            background: #ff6b6b;
            color: #000;
            transform: scale(1.05);
        }

        /* Smooth Hover Effect */
        .filter__controls li {
            display: inline-block;
            transition: 0.3s ease-in-out;
        }

        .filter__controls li:hover {
            color: white;
            transform: scale(1.1);
        }

        .filter__controls {
            list-style: none;
            padding: 0;
            font-size: 20px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1.5px;
            color: black;
            /* Pure Black Text */
            cursor: pointer;
            transition: 0.3s;
            display: inline-block;
            border: none
        }

        .filter__controls .active {
            font-weight: bold;
            padding-bottom: 5px;
        }

        .filter__controls li {
            display: inline-block;
            transition: 0.3s ease-in-out;
            padding: 5px 15px;
        }

        .filter__controls li:hover {
            color: #555;
            /* Subtle Grey on Hover */
            transform: scale(1.05);
        }
    </style>
    <section class="hero">
